{% extends 'base.html.twig' %}
{% block body %}
    <div class="container">
        <table>
            <thead>
            <tr>
                <td>ID</td>
                <td>Produkt</td>
                <td>Preis</td>
                <td>Lagerbestand</td>
            </tr>
            </thead>
            <tbody>
            {% for product in products %}
                <tr>
                    <td>{{product.id}}</td>
                    <td>{{product.name}}</td>
                    <td>{{product.price}}</td>
                    <td>{{product.stock}}</td>
                    <td><a href="{{ path('admin.product.delete',{id: product.id}) }}">x</a></td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock body %}