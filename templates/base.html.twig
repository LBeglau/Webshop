<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>
        {% block title %}{% endblock %}
    </title>
    {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('css/base_style.css') }}">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
        <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.10.2/dist/umd/popper.min.js" integrity="sha384-7+zCNj/IqJ95wo16oMtfsKbZ9ccEh31eOz1HGyDuCQ6wgnyJNSYdrPa03rtR1zdB" crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js" integrity="sha384-QJHtvGhmr9XOIpI6YVutG+2QOK9T+ZnN4kzFN1RtK3zEFEIsxhlmWl5/YESvpZ13" crossorigin="anonymous"></script>
    {% endblock %}
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
</head>
<body>

<nav>
    {% if is_granted('IS_AUTHENTICATED_FULLY') %}
    {% endif %}
    <div class="logo">
        <h4>
            <a href="{{ path('home') }}">
                <span style="color: #dfdfdf; ">Webshop</span>
            </a>
        </h4>
    </div>
    <div class="shopping-cart">
        <h4>
            <a href="{{ path('basket') }}">
                <span style="color: #dfdfdf; ">Warenkorb</span>
            </a>
        </h4>
    </div>

    <ul class="nav-links">
        {% if not is_granted('IS_AUTHENTICATED_FULLY') %}
            <li>
                <a href="{{ path('register') }}">Registrieren</a>
            </li>
        {% endif %}

        {% if is_granted('ROLE_ADMIN') and is_granted('IS_AUTHENTICATED_FULLY') %}
            <li>
                <a href="{{ path('admin.admin') }}">Admin-Panel</a>
            </li>
        {% endif %}
        {% if is_granted('IS_AUTHENTICATED_FULLY') and is_granted('ROLE_PrivUser') or is_granted('ROLE_ADMIN') %}
            <li>
                {# <a href="{{ path('profile') }}">Mein Profil</a>#}
            </li>
        {% endif %}
        {% if is_granted('IS_AUTHENTICATED_FULLY') %}
            <li>
                <a href="{{ path('app_logout') }}">Logout</a>
            </li>
        {% endif %}
    </ul>
    <div class="burger">
        <div class="line1"></div>
        <div class="line2"></div>
        <div class="line3"></div>
    </div>
</nav>
{% block body %}{% endblock %}{% block javascripts %}
    <script src="{{ asset('js/base_script_navbar.js') }}"></script>
    <script src="{{ asset('js/base_script_themetoggler.js') }}"></script>
{% endblock %}
</body>
</html>
