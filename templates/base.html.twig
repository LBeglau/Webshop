        {# <a href="{{ path('profile') }}">Mein Profil</a> #}
        {# </li> #}
        {# {% endif %} #}

        {% if is_granted('IS_AUTHENTICATED_FULLY') %}
            <li>
                <a href="{{ path('app_logout') }}">Logout</a>
            </li>
        {% else %}
            <li>
                <a href="{{ path('app_login') }}">Login</a>
            </li>
        {% endif %}
    </ul>
    <div class="burger">
        <div class="line1"></div>
        <div class="line2"></div>
        <div class="line3"></div>
    </div>
</nav>
